<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_item_list_diary"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_item_list_diary_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.11.01"
        style="@style/list_title_small_black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/iv_item_list_diary"
        app:layout_constraintStart_toEndOf="@id/iv_item_list_diary"/>

    <TextView
        android:id="@+id/tv_item_list_diary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_item_list_diary_date"
        app:layout_constraintTop_toBottomOf="@id/tv_item_list_diary_date"
        android:layout_marginTop="8dp"
        android:maxWidth="280dp"
        android:text="diary contents \t hello \t hello \t \n the next line"
        android:maxLines="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>