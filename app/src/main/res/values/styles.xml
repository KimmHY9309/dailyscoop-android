<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_text_white" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="btn_text_black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dialog_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dialog_tv_detail" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/greyPorcelain</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>