<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btn_text_white" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="btn_text_black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dialog_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dialog_tv_detail" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/greyPorcelain</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="title_grey" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textSize">14dp</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tv_year_month_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="diary_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="android:textFontWeight">700</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="btn_text_small_white" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10dp</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="fontWeight">500</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/greyPorcelain</item>
    </style>

    <style name="text_small_black" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/fontfamily</item>
        <item name="fontWeight">500</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>


</resources>